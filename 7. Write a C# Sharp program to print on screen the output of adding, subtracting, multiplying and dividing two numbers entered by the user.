// 7. Write a C# Sharp program to print on screen the output of adding, subtracting, multiplying and dividing two numbers entered by the user.

Console.WriteLine("Please enter a number");
int num = Convert.ToInt32(Console.ReadLine());
Console.WriteLine("Please enter a second number");
int numTwo = Convert.ToInt32(Console.ReadLine());


Console.Write(num + " plus " + numTwo + " equals "); 
Console.WriteLine(num + numTwo);
Console.Write(num + " subtract " + numTwo + " is ");
Console.WriteLine(num - numTwo);
Console.Write(num + " times " + numTwo + " equals ");
Console.WriteLine(num * numTwo);
Console.Write(num + " divide " + numTwo + " equals ");
Console.WriteLine(num / numTwo);

Console.ReadKey();
